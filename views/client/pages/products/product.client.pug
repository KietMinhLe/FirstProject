extends ../../layouts/default.pug 
block main()
    h1 Trang Sản Phẩm
        .container.my-3 
            .row    
                .col-12 
                    h2.inner-title Danh Sách Sản Phẩm

            .row 
                each item in products
                    .col-4.mb-3
                        .product-item 
                            .inner-image
                                img(
                                    src=item.thumbnail
                                    alt=item.title
                                )
                            .inner-content
                                h3.inner-title #{item.title} 
                                .inner-price-new #{item.priceNew}$
                                .inner-price-old #{item.price}$
                                .inner-discount #{item.discountPercentage}%


